---
import type { TeamMember } from '../data/team';

interface Props {
  member: TeamMember;
}

const { member } = Astro.props;
---
<article class="team-card">
  <div class="team-card__header">
    <div class="team-card__avatar">
      {member.image ? (
        <img src={member.image} alt="" class="team-card__photo" width="56" height="56" />
      ) : (
        <span class="team-card__initials">{member.name.split(' ').map(n => n[0]).join('')}</span>
      )}
    </div>
    <div>
      <h3 class="team-card__name">{member.name}</h3>
      <p class="team-card__role">{member.role}</p>
    </div>
  </div>
  <p class="team-card__bio">{member.bio}</p>
  <div class="team-card__expertise">
    {member.expertise.map((skill) => (
      <span class="team-card__skill">{skill}</span>
    ))}
  </div>
  <a href={member.linkedIn} target="_blank" rel="noopener noreferrer" class="team-card__link">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
    View on LinkedIn
  </a>
</article>

<style>
  .team-card {
    padding: var(--space-2xl);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .team-card__header {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .team-card__avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: var(--color-dark);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    overflow: hidden;
  }

  .team-card__photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .team-card__initials {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 400;
    color: var(--color-dark-text);
    letter-spacing: 0.02em;
  }

  .team-card__name {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 600;
    margin: 0;
    color: var(--color-text);
    letter-spacing: -0.01em;
  }

  .team-card__role {
    margin: 2px 0 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .team-card__bio {
    margin: 0;
    font-size: var(--text-sm);
    line-height: var(--line-relaxed);
    color: var(--color-text-muted);
  }

  .team-card__expertise {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .team-card__skill {
    font-size: var(--text-xs);
    font-weight: 500;
    padding: 0.3rem 0.65rem;
    background: var(--color-subtle);
    border-radius: 100px;
    color: var(--color-text);
  }

  .team-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text-muted);
    margin-top: auto;
    transition: color 0.2s ease;
  }

  .team-card__link:hover {
    color: var(--color-text);
  }
</style>
