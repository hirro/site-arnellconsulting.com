---
const currentYear = new Date().getFullYear();
---
<footer class="footer">
  <div class="container footer__inner">
    <div class="footer__top">
      <div class="footer__brand">
        <span class="footer__name">Arnell Consulting AB</span>
        <p class="footer__tagline">Technology & Business Consulting</p>
      </div>
      <nav class="footer__links" aria-label="Footer">
        <a href="/#services">Services</a>
        <a href="/#team">Team</a>
        <a href="https://www.linkedin.com/in/jimarnell/" target="_blank" rel="noopener noreferrer">LinkedIn</a>
      </nav>
    </div>
    <hr class="footer__divider" />
    <div class="footer__bottom">
      <p class="footer__copy">
        &copy; {currentYear} Arnell Consulting AB. Stockholm, Sweden.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #296374;
    color: var(--color-dark-text);
    margin-top: auto;
  }

  .footer__inner {
    padding-block: var(--space-2xl) var(--space-xl);
  }

  .footer__top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2xl);
    padding-bottom: var(--space-xl);
    flex-wrap: wrap;
  }

  .footer__name {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .footer__tagline {
    margin: var(--space-xs) 0 0;
    font-size: var(--text-sm);
    color: rgba(237, 237, 206, 0.9);
  }

  .footer__links {
    display: flex;
    gap: var(--space-xl);
    flex-wrap: wrap;
  }

  .footer__links a {
    font-size: var(--text-sm);
    color: rgba(237, 237, 206, 0.9);
    transition: color 0.2s ease;
  }

  .footer__links a:hover {
    color: var(--color-dark-text);
  }

  .footer__divider {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    margin: 0 0 var(--space-lg);
  }

  .footer__bottom {
    text-align: center;
  }

  .footer__copy {
    margin: 0;
    font-size: var(--text-xs);
    color: rgba(237, 237, 206, 0.85);
  }

  @media (max-width: 640px) {
    .footer__top {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-lg);
    }

    .footer__links {
      flex-direction: row;
      gap: var(--space-md);
    }
  }
</style>
